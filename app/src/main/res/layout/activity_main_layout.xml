<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/widget_btn_sale"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Sale"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_void"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Void"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_refund"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Refund"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_query"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Query Acquire Order"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_get_refund"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Query Refund Order"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_get_order_receipt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Get Acquire Order Receipt"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/widget_btn_print_order_receipt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Print Acquire Order Receipt"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/widget_btn_get_refund_receipt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Get Refund Order Receipt"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/widget_btn_print_refund_receipt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Print Refund Order Receipt"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/getDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Device info"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/settlement"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Settlement "
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/common_btn_ping"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="PING"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/common_btn_pong"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="PONG"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/widget_btn_get_pages"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Query Page"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/common_btn_disconnect"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Disconnect"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>